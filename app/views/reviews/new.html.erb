<h1>New Review</h1>

<%= form_with scope: :review, url: reviews_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>


<%= link_to 'Back', reviews_path %>
